from xonsh.tools import unthreadable, uncapturable

# set fav prompt
$PROMPT = "{env_name:{} }{BOLD_GREEN}{user}@{hostname}{BOLD_BLUE} {cwd_base}{branch_color}{curr_branch: {}}{NO_COLOR} {BOLD_BLUE}>{NO_COLOR} "

# define vim alias for pyvim (pip install pyvim)
aliases['vim'] = 'pyvim'

# define vi alias to original vim
aliases['vi'] = '/usr/bin/vim'

# open xonshrc file with vim defined
@uncapturable
@unthreadable
def _xonshrc():
    vim ~/.xonshrc

aliases['xonshrc'] = _xonshrc

# define wget alias for python-wget (pip install wget)
aliases['wget'] = 'python3 -m wget'
